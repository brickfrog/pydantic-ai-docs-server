#!/usr/bin/env node

import { execSync } from 'child_process';
import path from 'path';
import { fileURLToPath } from 'url';
import fs from 'fs';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);
const packageRoot = path.resolve(__dirname, '..');

// Execute the init script
const initScript = path.join(packageRoot, 'init.sh');

if (!fs.existsSync(initScript)) {
  console.error(`‚ùå Error: init script not found at ${initScript}`);
  process.exit(1);
}

console.log(`üìö Running initialization script from ${initScript}...`);

try {
  execSync(`bash ${initScript}`, { cwd: packageRoot, stdio: 'inherit' });
  console.log('‚úÖ Initialization completed successfully!');
} catch (error) {
  console.error('‚ùå Initialization failed:', error);
  process.exit(1);
} 